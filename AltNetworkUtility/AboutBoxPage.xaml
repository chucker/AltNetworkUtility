<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="AltNetworkUtility.AboutBoxPage"
    WidthRequest="300" HeightRequest="326">

    <ContentPage.Content>

        <Grid VerticalOptions="Fill">

            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <StackLayout Grid.Row="1" Orientation="Vertical" VerticalOptions="Center">
                <Label FontSize="13" FontAttributes="Bold" Margin="0,20,0,0" HorizontalOptions="Center">
                    Alt Network Utility
                </Label>

                <Label FontSize="11" Margin="0,0,0,30" HorizontalOptions="Center">
                    1.0
                </Label>

                <Label FontSize="11" Margin="0,20,0,10" HorizontalOptions="Center">
                    © 2021 Sören Kuklau and contributors
                </Label>
            </StackLayout>

        </Grid>

    </ContentPage.Content>
</ContentPage>
